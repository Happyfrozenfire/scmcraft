{
  "schemaVersion": 1,
  "id": "scmcraft",
  "version": "${version}",

  "name": "SCMCraft",
  "description": "A mod inspired by various games such as Monster Hunter, Final Fantasy, Kingdom Hearts, and more!",
  "authors": [
    "Silverbeamskittles",
    "Happyfrozenfire"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "DBAD",
  "icon": "assets/scmcraft/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.wieldersilver.scmcraft.SCMCraft"
    ]
  },
  "mixins": [
    "scmcraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.5",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
